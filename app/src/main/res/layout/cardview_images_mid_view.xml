<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_between_images_gallery"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_cardlarge_gallery"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".33333333333333333333333333333"
    />


    <ImageView
        android:id="@+id/start_img"
        android:layout_width="0dp"
        android:layout_height="@dimen/hieght_small_img_gallery"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/line_cardlarge_gallery"
        android:src="@mipmap/ic_launcher"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/mid_img"
        android:layout_width="0dp"
        android:layout_height="@dimen/hieght_small_img_gallery"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/start_img"
        app:layout_constraintEnd_toStartOf="@+id/line_cardHorizontal_gallery"
        app:layout_constraintStart_toEndOf="@id/line_cardlarge_gallery"
        android:layout_marginStart="@dimen/margin_between_images_gallery"

        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_cardHorizontal_gallery"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".6666666666666666666666666667"
        />


    <ImageView
        android:id="@+id/end_img"
        android:layout_width="0dp"
        android:layout_height="@dimen/hieght_small_img_gallery"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/start_img"
        app:layout_constraintStart_toEndOf="@id/line_cardHorizontal_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_between_images_gallery"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>