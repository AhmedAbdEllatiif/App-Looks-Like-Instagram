<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    android:padding="8dp"
    >




    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_chat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/txt_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello"
        android:textSize="@dimen/txt_chat_size"
        android:textColor="@color/black"
        android:background="@drawable/background_right"
        android:layout_marginStart="4dp"
        android:paddingStart="@dimen/padding_start_end_chat"
        android:paddingEnd="@dimen/padding_start_end_chat"
        android:paddingTop="@dimen/padding_top_bottom_chat"
        android:paddingBottom="@dimen/padding_top_bottom_chat"
        app:layout_constraintEnd_toStartOf="@id/img_chat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/txt_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/deliverd_color"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_chat"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>