<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewImage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    app:contentPadding="15dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profileImg_cardView_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="1dp"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/user_name_cardView_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="user name"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="2dp"
            app:layout_constraintStart_toEndOf="@id/user_profileImg_cardView_img"
            app:layout_constraintTop_toTopOf="@+id/user_profileImg_cardView_img"
            app:layout_constraintBottom_toBottomOf="@+id/user_profileImg_cardView_img"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txt_setAsProfileImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set as profile photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/user_profileImg_cardView_img"
            />

        <TextView
            android:id="@+id/txt_name_cardView_photoActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Name"
            android:padding="5dp"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/img_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <ImageView
            android:id="@+id/img_cardView_photoActivity"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toBottomOf="@id/txt_name_cardView_photoActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/img_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25/10/2018"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toBottomOf="@id/user_name_cardView_img"
            app:layout_constraintStart_toStartOf="@id/user_name_cardView_img"
            tools:ignore="RtlCompat" />


        <TextView
            android:id="@+id/fixed_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description "
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_cardView_photoActivity"
            />

        <TextView
            android:id="@+id/img_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description..."
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@id/fixed_description"
            app:layout_constraintTop_toTopOf="@id/fixed_description"
            app:layout_constraintBottom_toBottomOf="@id/fixed_description"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/profileImage_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_"
            app:layout_constraintStart_toStartOf="@id/img_cardView_photoActivity"
            app:layout_constraintEnd_toEndOf="@id/img_cardView_photoActivity"
            app:layout_constraintTop_toTopOf="@id/img_cardView_photoActivity"
            app:layout_constraintBottom_toBottomOf="@id/img_cardView_photoActivity"
            android:visibility="gone"
            />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>